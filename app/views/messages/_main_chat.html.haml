.chat-space
  .chat-space__group-info
    .chat-space__group-info__display
      .chat-space__group-info__display--name
        =@group.name
      .chat-space__group-info__display--member
        %a "Memberï¼š
        - @group.users.each do |user|
          =user.name
          %a,
    =link_to edit_group_path(@group), class: "chat-space__group-info--edit" do
      Edit
  .chat-space__message-list
    =render @messages
  .chat-space__message-form
    =form_for [@group, @message] do |f|
      .chat-space__message-form__box
        =f.text_field :text, placeholder: "type a message", class: "chat-space__message-form__box--text"
        =f.label :image, class: "chat-space__message-form__box__image" do
          =icon("fas", "image")
          =f.file_field :image, class: "chat-space__message-form__box__image--file"
      =f.submit "Send", class: "chat-space__message-form--send"