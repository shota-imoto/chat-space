.side-bar
  .side-bar__user-name
    .side-bar__user-name__user-box
      .side-bar__user-name__user-box--name
        =current_user.name
      .side-bar__user-name__user-box--btn
        =link_to new_group_path do
          =icon('far', 'edit', class: "side-bar__user-name__user-box--btn--icon")
          %span<>
        =link_to edit_user_path(current_user) do
          =icon('fas', 'cog', class: "side-bar__user-name__user-box--btn--icon side-bar__user-name__user-box--btn--icon--margin")
  .side-bar__group-list
    - current_user.group.each do |group|
      =link_to group_messages_path(group), class: "side-bar__group-list--group-box" do
        %p{class: "side-bar__group-list--group-box--name"}
          =group.name
        %p{class: "side-bar__group-list--group-box--message"}
          =group.show_last_message